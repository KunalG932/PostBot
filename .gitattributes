# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# Configuration files
*.cfg text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Requirements files
requirements*.txt text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary

# Python bytecode
*.pyc binary
*.pyo binary
*.pyd binary
